@model WebApplication1.Models.URL

@{
    ViewData["Title"] = "Details";
}

<h1>URL Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Long URL:</dt>
        <dd class="col-sm-10">@Model.LongUrl</dd>

        <dt class="col-sm-2">Short URL:</dt>
        <dd class="col-sm-10"><a href="@Model.ShortUrl" target="_blank">@Model.ShortUrl</a></dd>

        <dt class="col-sm-2">Create Date:</dt>
        <dd class="col-sm-10">@Model.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Created By:</dt>
        <dd class="col-sm-10">@ViewBag.CreatedByUserName</dd> <!-- Display user's username from ViewBag -->
    </dl>
</div>

<a asp-action="Index">Back to List</a>